<%- include('partials/header')  %>

<!-- formulario de cadastro do veiculo, base para o anuncio-->
<!-- pode receber mais de um veiculo para um mesmo cadastro de motorista? -->

<body>
    <h1 class="titulo">CADASTRO DO VEÍCULO</h1>
    <h3 class="sub_titulo">MOSTRE SEU VEÍCULO</h3>
    <form class="form_dashboar" action= "/veiculo" method="POST">
        <div>    
            <label class="label_dashboard" for="veiculo">Modelo:</label> 
            <input class="input_dashboard" type="text"name="veiculo" id="veiculo" placeholder="Modelo do veículo">
        </div>
        <div>    
            <label class="label_dashboard" for="anoVeiculo">Ano:</label> 
            <input class="input_dashboard" type="year"name="anoVeiculo" id="anoVeiculo" placeholder="Ano de fabricação do veículo">
        </div>
            <input class="input_dashboard" type="file" name="fotoVeículo1" accept="image/*">
            <input class="input_dashboard" type="file" name="fotoVeículo2" accept="image/*">
            <input class="input_dashboard" type="file" name="fotoVeículo3" accept="image/*">
        </div>
        <div class="botoes_dashboard">
            <button class="botao_dashboard" type="button" name="paginaAnterior">ANTERIOR</button>
            <button class="botao_dashboard" type="submit" name="cadastrarVeiculo">FINALIZAR CADASTRO</button>
        </div>
    </form>
</body>

