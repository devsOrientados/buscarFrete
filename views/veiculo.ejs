<%- include('partials/header')  %>
<!--inicio do Dashboard do motorista, dados pessoais -->
<section>

    <div class="container_titulo">
       <h1 class="sub_titulo">CADASTRO DO VEÍCULO</h1>
       <p class="description_dashboard">Vamos preparar o seu anúncio, para isso precisamos de algumas informacões sobre o veículo.</p>
    </div>
    <div class="description_dashboard">
        <% if (errors.length) { %>
            <% errors.forEach(error => { %>
               <li>
                <%= error.param %>: <%= error.msg %> 
               </li>
            <% }) %>
        <% } %>
    </div>
    <form class="form_dashboard" action="/dashboard/create"  method="POST" enctype="multiport/form-data"> 
    <h3 class="sub_titulo">DADOS DO VEICULO</h3>
        <div>    
            <label class="label_dashboard" for="veiculo">Modelo:</label> 
            <input class="input_dashboard" type="text"name="veiculo" id="veiculo" placeholder="Modelo do veículo">
        </div>
        <div>    
            <label class="label_dashboard" for="anoVeiculo">Ano:</label> 
            <input class="input_dashboard" type="year"name="anoVeiculo" id="anoVeiculo" placeholder="Ano de fabricação do veículo">
        </div>
        <div>
            <input class="input_dashboard" type="file" name="fotoVeiculo1" accept="image/*">
            <input class="input_dashboard" type="file" name="fotoVeiculo2" accept="image/*">
            <input class="input_dashboard" type="file" name="fotoVeiculo3" accept="image/*">
        </div>
        <div class="botao_dashboard">
            <button class="botao_dashboard" type="submit" name="cadastrarDashboard">FINALIZAR CADASTRO</button>
        </div>
</form>
</section>


<%- include('partials/footer')  %> 