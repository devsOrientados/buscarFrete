<%- include('partials/header')  %>
<!--inicio do Dashboard do motorista, dados pessoais -->
<section>

    <div class="container_titulo">
       <h1 class="sub_titulo">CADASTRO DO MOTORISTA</h1>
       <p class="description_dashboard">Aqui você pode atualizar o seu anúncio.</p>
    </div>
    
<!-- para o formulario de editar: action="/dashboard/edit/id[id do motorista]?__method=PUT" method=POST-->  
<!-- buscar os valores de acordo com área logada e id do motorista-->  
    <form class="form_dashboard" action="dashboard/edit/<%=cliente.id_cliente %>?__method=PUT"  method="POST"> 
        <h3 class="sub_titulo">DADOS PESSOAIS</h3> 
        <div>
            <label class="label_dashboard" for="nome">Nome:</label> 
            <input class="input_dashboard" type="text"name="nome" id="nome" placeholder="digite o seu nome" value="<%=cliente.nome%>">
        </div>
        <div>
            <label class="label_dashboard" for="sobrenome">Sobrenome:</label> 
            <input class="input_dashboard" type="text"name="sobrenome" id="sobrenome" placeholder="digite o seu sobrenome" value="<%=cliente.sobrenome%>" >
        </div>
        <div>
            <label class="label_dashboard" for="cpf">CPF:</label> 
            <input class="input_dashboard" type="number"name="cpf" id="cpf" placeholder="digite o CPF, apenas números" value="<%=cliente.cpf%>" >
        </div>
        <div>
            <label class="label_dashboard" for="cnh">CNH:</label> 
            <input class="input_dashboard" type="number"name="cnh" id="cnh" placeholder="digite o número da sua CNH" value="<%=cliente.cnh%>"  >
        </div>
        <div>
            <label class="label_dashboard" for="categoria">Categoria da sua CNH:</label> 
            <select id="categoria" name="categoria">
                <option value="" selected hidden>selecione</option>
                <option value="A">A</option>
                <option value="B">B</option>
                <option value="C">C</option>
                <option value="D">D</option>
                <option value="E">E</option>
            </select>
        </div>
        <div>
            <label class="label_dashboard" for="telefone">Telefone para contato:</label> 
            <input class="input_dashboard" type="tel"name="telefone" id="telefone" placeholder="(11)11111-1111" value="<%=cliente.telefone%>" >
        </div>
        <div>
            <label class="label_dashboard" for="cep">CEP:</label> 
            <input class="input_dashboard" type="number"name="cep" id="cep" placeholder="Digite seu CEP, apenas números" value="<%=cliente.cep%>">
        </div>
        <div class="estado">
            <label class="label_dashboard" for="Estado">Estado:</label> 
                <select id="estado" name="estado">
                    <option value="<%=cliente.estado%>" selected hidden>Estado</option>
                    <option value="AC">Acre</option>
                    <option value="AL">Alagoas</option>
                    <option value="AP">Amapá</option>
                    <option value="AM">Amazonas</option>
                    <option value="BA">Bahia</option>
                    <option value="CE">Ceará</option>
                    <option value="DF">Distrito Federal</option>
                    <option value="ES">Espírito Santo</option>
                    <option value="GO">Goiás</option>
                    <option value="MA">Maranhão</option>
                    <option value="MT">Mato Grosso</option>
                    <option value="MS">Mato Grosso do Sul</option>
                    <option value="MG">Minas Gerais</option>
                    <option value="PA">Pará</option>
                    <option value="PB">Paraíba</option>
                    <option value="PR">Paraná</option>
                    <option value="PE">Pernambuco</option>
                    <option value="PI">Piauí</option>
                    <option value="RJ">Rio de Janeiro</option>
                    <option value="RN">Rio Grande do Norte</option>
                    <option value="RS">Rio Grande do Sul</option>
                    <option value="RO">Rondônia</option>
                    <option value="RR">Roraima</option>
                    <option value="SC">Santa Catarina</option>
                    <option value="SP">São Paulo</option>
                    <option value="SE">Sergipe</option>
                    <option value="TO">Tocantins</option>
                </select>
        </div>
        <div>
            <label class="label_dashboard" for="cidade">Cidade:</label> 
            <input class="input_dashboard" type="text" name="cidade" id="cidade" placeholder="cidade principal" value="<%=cliente.cidade%>" >
        </div>
        <div>
            <label class="label_dashboard" for="bairro">Bairro:</label> 
            <input class="input_dashboard" type="text" name="bairro" id="bairro" placeholder="digite seu bairro" value="<%=cliente.bairro%>">
        </div>
        <div>
            <label class="label_dashboard" for="logradouro">Logradouro:</label> 
            <input class="input_dashboard" type="text" name="logradouro" id="logradouro" placeholder="Rua,Avenida..." value="<%=cliente.logradouro%>" >
        </div>
        <div>
            <label class="label_dashboard" for="numero">Número:</label> 
            <input class="input_dashboard" type="text" name="numero" id="numero" value="<%=cliente.numero%>" >
        </div>
    <h3 class="sub_titulo">DADOS DO SERVIÇO</h3>  
        <div>
            <label class="label_dashboard" for="servico">Selecione o alcance das viagens que pretende fazer:</label>
            <div class="radio">
                <input class="input_dashboard" type="radio" name="servico" value="viagens locais">
                <label class="label_dashboard">Viagens locais</label>
                <input class="input_dashboard" type="radio" name="servico" value="viagens intermunicipais">
                <label class="label_dashboard">Viagens intermunicipais</label>
                <input class="input_dashboard" type="radio" name="servico" value="viagens interestaduais">
                <label class="label_dashboard">Viagens interestaduais</label>
            </div>
        </div>
        <div>
            <label class="label_dashboard" for="autoDescricao">Escreva sobre você para seus clientes te conhecerem:</label>
            <textarea class="seuPerfil" name="autoDescricao" id="autoDescricao" value="<%=anuncio.auto_descricao%>">Sobre você</textarea>
        </div>
        <div>
            <label class="label_dashboard">Sua foto de perfil</label>
            <input class="input_dashboard" type="file" name="fotoPerfil" accept="image/*">
        </div>
        <div>    
            <label class="label_dashboard" for="preco">Preço médio por kilometro:</label> 
            <input class="input_dashboard" type="text" name="preco" id="preco" placeholder="preço médio do kilometro percorrido no frete" value="<%=anuncio.preco%>">
        </div>     
    <h3 class="sub_titulo">DADOS DO VEICULO</h3>
        <div>    
            <label class="label_dashboard" for="veiculo">Modelo:</label> 
            <input class="input_dashboard" type="text"name="veiculo" id="veiculo" placeholder="Modelo do veículo" value="<%=veiculo.modelo%>">
        </div>
        <div>    
            <label class="label_dashboard" for="anoVeiculo">Ano:</label> 
            <input class="input_dashboard" type="year"name="anoVeiculo" id="anoVeiculo" placeholder="Ano de fabricação do veículo" value="<%=veiculo.ano_veiculo%>">
        </div>
        <div>
            <input class="input_dashboard" type="file" name="fotoVeiculo1" accept="image/*">
            <input class="input_dashboard" type="file" name="fotoVeiculo2" accept="image/*">
            <input class="input_dashboard" type="file" name="fotoVeiculo3" accept="image/*">
        </div>
        <div class="botao_dashboard">
            <button class="botao_dashboard" type="submit" name="editarDashboard">EDITAR CADASTRO</button>
        </div>
    </form>
</section>


<%- include('partials/footer')  %> 